{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "packages": ["packages/*"],
  "changelog": {
    "labels": {
      "pr: enhancement": ":rocket: Enhancement",
      "pr: bug": ":bug: Bug Fix",
      "pr: documentation": ":book: Documentation",
      "pr: dependency": ":deciduous_tree: Dependency"
    },
    "repo": "linkmore-framework",
    "cacheDir": ".changelog"
  },
  "private": true,
  "license": "MIT",
  "command": {
    "version": {
      "exact": true
    },
    "bootstrap": {
      "ignore": "",
      "npmClientArgs": ""
    },
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"]
    }
  }
}
